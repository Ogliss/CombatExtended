<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<!-- ==== Checking for the mod ==== -->
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Medical System Expansion</modName>
			</li>

			<!-- ==== Vanilla Simple Prosthesis  ==== -->
			<!-- SimpleProstheticLeg -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/HediffDef[defName="SimpleProstheticLeg"]</xpath>
				<value>
					<stages>
						<li>
							<minSeverity>0.000001</minSeverity>
							<statOffsets>
								<ArmorRating_Blunt>0.274</ArmorRating_Blunt>
								<ArmorRating_Sharp>0.149</ArmorRating_Sharp>
							</statOffsets>
						</li>
					</stages>
				</value>
			</li>
			<!-- SimpleProstheticArm -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/HediffDef[defName="SimpleProstheticArm"]</xpath>
				<value>
					<stages>
						<li>
							<minSeverity>0.000001</minSeverity>
							<statOffsets>
								<ArmorRating_Blunt>0.181</ArmorRating_Blunt>
								<ArmorRating_Sharp>0.098</ArmorRating_Sharp>
							</statOffsets>
						</li>
					</stages>
				</value>
			</li>
			<!-- SimpleProstheticHeart -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/HediffDef[defName="SimpleProstheticHeart"]</xpath>
				<value>
					<stages>
						<li>
							<minSeverity>0.000001</minSeverity>
							<statOffsets>
								<ArmorRating_Blunt>0.11</ArmorRating_Blunt>
								<ArmorRating_Sharp>0.06</ArmorRating_Sharp>
							</statOffsets>
						</li>
					</stages>
				</value>
			</li>
			<!-- CochlearImplant -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/HediffDef[defName="CochlearImplant"]</xpath>
				<value>
					<stages>
						<li>
							<minSeverity>0.000001</minSeverity>
							<statOffsets>
								<ArmorRating_Blunt>0.006</ArmorRating_Blunt>
								<ArmorRating_Sharp>0.003</ArmorRating_Sharp>
							</statOffsets>
						</li>
					</stages>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>