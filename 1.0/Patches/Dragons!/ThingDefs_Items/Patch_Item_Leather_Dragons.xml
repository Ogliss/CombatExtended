<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Changing leather protection. -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<!-- ==== Check for the mod. ==== -->
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Dragon Mod</modName>
			</li>

			<!-- ==== DragonLeatherBase ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="DragonLeatherBase"]/statBases/StuffPower_Armor_Sharp</xpath>
				<value>
					<StuffPower_Armor_Sharp>0.808</StuffPower_Armor_Sharp>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="DragonLeatherBase"]/statBases/StuffPower_Armor_Blunt</xpath>
				<value>
					<StuffPower_Armor_Blunt>0.127</StuffPower_Armor_Blunt>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[@Name="DragonLeatherBase"]/stuffProps/categories</xpath>
				<value>
					<li>SoftArmor</li>
				</value>
			</li>

			<!-- ==== Leather_CryoDragon ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Leather_CryoDragon"]/statBases/StuffPower_Armor_Sharp</xpath>
				<value>
					<StuffPower_Armor_Sharp>0.837</StuffPower_Armor_Sharp>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Leather_CryoDragon"]/statBases/StuffPower_Armor_Blunt</xpath>
				<value>
					<StuffPower_Armor_Blunt>0.115</StuffPower_Armor_Blunt>
				</value>
			</li>

			<!-- ==== Leather_RockDragon ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Leather_RockDragon"]/statBases/StuffPower_Armor_Sharp</xpath>
				<value>
					<StuffPower_Armor_Sharp>0.865</StuffPower_Armor_Sharp>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Leather_RockDragon"]/statBases/StuffPower_Armor_Blunt</xpath>
				<value>
					<StuffPower_Armor_Blunt>0.135</StuffPower_Armor_Blunt>
				</value>
			</li>

			<!-- ==== Leather_RoyalDragon ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Leather_RoyalDragon"]/statBases/StuffPower_Armor_Sharp</xpath>
				<value>
					<StuffPower_Armor_Sharp>0.88</StuffPower_Armor_Sharp>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Leather_RoyalDragon"]/statBases/StuffPower_Armor_Blunt</xpath>
				<value>
					<StuffPower_Armor_Blunt>0.138</StuffPower_Armor_Blunt>
				</value>
			</li>

			<!-- ==== Leather_TrueDragon ==== -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Leather_TrueDragon"]/statBases/StuffPower_Armor_Sharp</xpath>
				<value>
					<StuffPower_Armor_Sharp>0.92</StuffPower_Armor_Sharp>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Leather_TrueDragon"]/statBases/StuffPower_Armor_Blunt</xpath>
				<value>
					<StuffPower_Armor_Blunt>0.142</StuffPower_Armor_Blunt>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>